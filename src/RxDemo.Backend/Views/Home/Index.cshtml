@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* The switch - the box around the slider */
    .switch {
        position: relative;
        display: inline-block;
        width: 60px;
        height: 34px;
    }

    /* Hide default HTML checkbox */
    .switch input {
        opacity: 0;
        width: 0;
        height: 0;
    }

    /* The slider */
    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        -webkit-transition: .4s;
        transition: .4s;
    }

    .slider:before {
        position: absolute;
        content: "";
        height: 26px;
        width: 26px;
        left: 4px;
        bottom: 4px;
        background-color: white;
        -webkit-transition: .4s;
        transition: .4s;
    }

    input:checked + .slider {
        background-color: red;
    }

    input:focus + .slider {
        box-shadow: 0 0 1px red;
    }

    input:checked + .slider:before {
        -webkit-transform: translateX(26px);
        -ms-transform: translateX(26px);
        transform: translateX(26px);
    }

    /* Rounded sliders */
    .slider.round {
        border-radius: 34px;
    }

    .slider.round:before {
        border-radius: 50%;
    }
</style>







<div class="text-center">
    <!-- Rounded switch -->
    <label class="switch">
        <input id="status" type="checkbox">
        <span class="slider round"></span>
    </label>

    <textarea id="log" class="form-control"  rows="30" style="overflow-y: scroll"></textarea>
</div>






<script>
    //Get Initial Checkbox state
    $.ajax({
        type: 'GET',
        url: 'https://localhost:44379/api/status',
        data: $(this).serialize(),
        success: function (data) {
            if (data) {
                $('#status').prop('checked', true);
            }
        },
        complete: function (data) {

        }
    });

    //Checkbox on change
    $('#status').change(function () {

        if ($(this).is(':checked')) {
            $(this).attr('value', 'true');
        } else {
            $(this).attr('value', 'false');
        }

        $.ajax({
            type: 'POST',
            url: 'https://localhost:44379/api/togglestatus',
            datatype: 'json',
            data: {"lockClient" : $(this).val()},
            success: function (data) {
                    
            },
            complete: function (data) {

            }
        });        
    });


    //Polling log
    var interval = 1000;  // 1000 = 1 second, 3000 = 3 seconds
    function doAjax() {
        $.ajax({
            type: 'GET',
            url: 'https://localhost:44379/api/log',
            data: $(this).serialize(),
            success: function (data) {
                var log = document.getElementById("log");
                log.value = data;
                log.scrollTop = log.scrollHeight;
            },
            complete: function (data) {
                // Schedule the next
                setTimeout(doAjax, interval);
            }
        });
    }
    setTimeout(doAjax, interval);
</script>
